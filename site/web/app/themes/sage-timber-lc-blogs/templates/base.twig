<!doctype html>
<html {{ function('language_attributes') }}>

    {% include 'templates/head.twig' %}

    <body {{ function('body_class') }}>

        <script>
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
                        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
            })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

            ga('create', 'UA-85209913-1', 'auto');
            ga('send', 'pageview');

        </script>

        {% include 'templates/header.twig' %}

        <div class="wrap container" role="document">
            <div class="content row">
                <main class="col-xs-12 col-md-8">
                    {% block content %}{% endblock %}
                </main>
                {% if display_sidebar %}
                    <aside class="sidebar col-xs-12 col-sm-12 col-md-4">
                        {% block sidebar %}
                            {% include 'templates/sidebar.twig' %}
                        {% endblock %}
                    </aside>
                {% endif %}
            </div>
        </div>

        {% include 'templates/footer.twig' %}

    </body>

</html>