{% extends "templates/base.twig" %}

{% block content %}

	<div class="user_info">

		{{image}}<br>
		{{name}}<br>
		{{role}}<br>
		{{dept}}<br>

		<div class="bio">
			{{bio}}
		</div>

	</div>


	<div class="blog-list">
		<ul>
			{% for post in posts %}				
				{% include 'templates/partials/post-summary.twig' %}				
			{% endfor %}
		</ul>
	</div>


{% endblock %}